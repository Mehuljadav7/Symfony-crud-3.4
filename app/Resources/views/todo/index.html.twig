{% extends 'base.html.twig' %}


{% block body %}
<br>
<h2 class="page-header">Latest Todos..</h2>
<div class="bd-example">
<table class="table table-striped">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Todo</th>
      <th scope="col">Due Date</th>
      <th scope="col">Task</th>
    </tr>
  </thead>
  <tbody>
  {% for todo in todos %}
    <tr>
      <th scope="row">{{ todo.id }}</th>
      <td>{{ todo.name }}</td>
      <td>{{ todo.duedate|date('F j Y, g:i a') }}</td>

      <td><a href="{{ path('todo_details', {'id': todo.id}) }}" class="btn btn-success"> VIEW </a>&nbsp;
      <a href="{{ path('todo_edit',{'id': todo.id}) }}" class="btn btn-warning"> EDIT <a>&nbsp;
      <a href="{{ path('todo_delete', {'id': todo.id}) }}" class="btn btn-danger"> DELETE </a> </td>
    </tr>
 {% endfor %}
    </tbody>
</table>
</div>
{% endblock %}